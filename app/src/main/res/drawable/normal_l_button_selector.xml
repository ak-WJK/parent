<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_focused="true">

        <shape>
            <gradient android:angle="270" android:centerX="0.5" android:centerY="0.5" android:endColor="@color/theme_gray" android:startColor="@color/theme_gray" android:type="linear" />

            <corners android:bottomLeftRadius="5dip" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape>

    </item>

    <item android:state_pressed="true">

        <shape>
            <gradient android:angle="270" android:centerX="0.5" android:centerY="0.5" android:endColor="@color/theme_gray" android:startColor="@color/theme_gray" android:type="linear" />

            <corners android:bottomLeftRadius="5dip" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape>

    </item>
    <item>
        <shape>
            <solid android:color="@color/theme_gray" />

            <corners android:bottomLeftRadius="5dip" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

</selector>