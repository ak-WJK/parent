<?xml version="1.0" encoding="utf-8"?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
    
    
  
    <item android:state_focused="true"> 
        
        <shape> 
            <gradient   
            android:startColor="@color/theme_green" android:endColor="@color/theme_green"
            android:type="linear" android:angle="270"  
            android:centerX="0.5" android:centerY="0.5" /> 
             
            <corners android:bottomRightRadius="5dip" /> 
            <padding android:left="10dp" android:top="5dp" 
                android:right="10dp" android:bottom="5dp" /> 
        </shape> 
        
    </item> 
    
    <item android:state_pressed="true"> 
        
        <shape> 
            <gradient   
            android:startColor="@color/theme_green" android:endColor="@color/theme_green"
            android:type="linear" android:angle="270"  
            android:centerX="0.5" android:centerY="0.5" /> 
             
            <corners android:bottomRightRadius="5dip" /> 
            <padding android:left="10dp" android:top="5dp" 
                android:right="10dp" android:bottom="5dp" /> 
        </shape> 
        
    </item> 
    <item > 
        <shape> 
            <solid android:color="@color/theme_green"/>
             
            <corners android:bottomRightRadius="5dip" /> 
            <padding android:left="10dp" android:top="10dp" 
                android:right="10dp" android:bottom="10dp" /> 
        </shape> 
    </item> 
    
</selector>  