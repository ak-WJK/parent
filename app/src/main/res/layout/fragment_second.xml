<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/dq"
        android:drawablePadding="@dimen/ndec_w12"
        android:paddingBottom="@dimen/ndec_w3"
        android:paddingLeft="@dimen/ndec_w0"
        android:paddingRight="@dimen/ndec_w3"
        android:paddingTop="@dimen/ndec_w3"
        android:text="自我诊断报告"
        android:textSize="@dimen/text_common" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="@dimen/ndec_w0" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/dg_zhangjie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/zj"
            android:drawablePadding="@dimen/ndec_w12"
            android:gravity="center|left"
            android:padding="12dp"
            android:text="章节诊断报告"
            android:textColor="@color/_333333"
            android:textSize="@dimen/text_common" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/enter_arrow" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="@dimen/ndec_w0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/dg_quanke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/qk"
            android:drawablePadding="@dimen/ndec_w12"
            android:gravity="center|left"
            android:padding="12dp"
            android:text="全科诊断报告"
            android:textColor="@color/_333333"
            android:textSize="@dimen/text_common" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/enter_arrow" />

    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView

            android:id="@+id/sec_ks_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/dq"
            android:drawablePadding="@dimen/ndec_w12"
            android:paddingBottom="@dimen/ndec_w3"
            android:paddingLeft="@dimen/ndec_w0"
            android:paddingRight="@dimen/ndec_w3"
            android:paddingTop="@dimen/ndec_w3"
            android:text="学校报告"
            android:textSize="@dimen/text_common" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/enter_arrow" />

    </RelativeLayout>
</LinearLayout>
