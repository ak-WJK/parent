<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical"
    tools:context="com.kzb.parents.WelcomeActivity">


    <include layout="@layout/common_head"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="选择会员"
        android:textColor="@color/black_87" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_16">

    </View>

    <Button
        android:id="@+id/vip_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查看会员详情" />

    <ListView
        android:id="@+id/vip_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp">

    </ListView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="选择支付金额" />


            <RadioGroup
                android:id="@+id/vip_group_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">


            </RadioGroup>

            <RelativeLayout
                android:id="@+id/vip_zfb_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="支付宝支付"
                    android:textColor="@color/_333333"
                    android:textSize="@dimen/text_common" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/enter_arrow" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/vip_wx_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="微信支付"
                    android:textColor="@color/_333333"
                    android:textSize="@dimen/text_common" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/enter_arrow" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
