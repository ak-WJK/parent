<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical"
    tools:context="com.kzb.parents.WelcomeActivity">


    <include layout="@layout/common_head">

    </include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/vip_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/vip_detail_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/vip_detail_tilte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/vip_detail_img"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="选择会员"
                    android:textColor="@color/black_87" />
            </RelativeLayout>



            <View
                android:id="@+id/vip_detail_line_one"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/vip_detail_tilte"
                android:background="@color/black_16">

            </View>

            <TextView
                android:id="@+id/vip_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/vip_detail_line_one"
                android:layout_marginLeft="50dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/vip_detail_content"
                android:background="@color/black_16">

            </View>


        </LinearLayout>

        <TextView
            android:id="@+id/vip_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vip_detail_layout"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="支付方式"
            android:textColor="@color/black_87" />

        <View
            android:id="@+id/vip_detail_line_three"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/vip_detail_type"
            android:background="@color/black_16">

        </View>

        <RelativeLayout
            android:id="@+id/vip_detail_wx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/vip_detail_line_three">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/wx_pay"
                android:layout_marginLeft="10dp"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="微信支付" />

            <ImageView
                android:id="@+id/vip_detail_wx_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/pay_select_press" />

        </RelativeLayout>


        <View
            android:id="@+id/vip_detail_line_four"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/vip_detail_wx"
            android:background="@color/black_16">

        </View>

        <RelativeLayout
            android:id="@+id/vip_detail_zfb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/vip_detail_line_four">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/zfb_pay"
                android:layout_marginLeft="10dp"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="支付宝" />

            <ImageView
                android:id="@+id/vip_detail_zfb_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/pay_select_normal" />

        </RelativeLayout>

        <View
            android:id="@+id/vip_detail_line_five"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/vip_detail_zfb"
            android:background="@color/black_16">

        </View>

        <RelativeLayout
            android:id="@+id/vip_detail_pay_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/main_gray">

            <TextView
                android:id="@+id/vip_detail_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="总计2334"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/vip_detail_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/order_btn_green"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="确认支付"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
