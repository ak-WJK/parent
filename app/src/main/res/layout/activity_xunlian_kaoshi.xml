<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical">

    <include layout="@layout/common_head"></include>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@drawable/dq"
        android:drawablePadding="@dimen/ndec_w12"
        android:paddingBottom="@dimen/ndec_w3"
        android:paddingLeft="@dimen/ndec_w10"
        android:paddingRight="@dimen/ndec_w3"
        android:paddingTop="@dimen/ndec_w3"
        android:text="自主针对训练"
        android:textSize="@dimen/text_common" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="@dimen/ndec_w0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/xunlian_zhangjie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/zj"
            android:drawablePadding="@dimen/ndec_w12"
            android:gravity="center|left"
            android:padding="12dp"
            android:text="章节训练"
            android:textColor="@color/_333333"
            android:textSize="@dimen/text_assist" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/enter_arrow" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="@dimen/ndec_w0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/xunlian_quanke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/qk"
            android:drawablePadding="@dimen/ndec_w12"
            android:gravity="center|left"
            android:padding="12dp"
            android:text="全科训练"
            android:textColor="@color/_333333"
            android:textSize="@dimen/text_assist" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/enter_arrow" />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/dq"
        android:drawablePadding="@dimen/ndec_w12"
        android:paddingBottom="@dimen/ndec_w3"
        android:paddingLeft="@dimen/ndec_w10"
        android:paddingRight="@dimen/ndec_w3"
        android:paddingTop="@dimen/ndec_w3"
        android:text="学校针对训练"
        android:textSize="@dimen/text_common" />


    <RelativeLayout
        android:id="@+id/rl_zhishidian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/enter_arrow" />

        <TextView

            android:id="@+id/xunlian_chuti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:drawableLeft="@drawable/qk"
            android:drawablePadding="@dimen/ndec_w12"
            android:gravity="center|left"
            android:padding="12dp"
            android:text="针对知识点出题"
            android:textColor="@color/_333333"
            android:textSize="@dimen/text_assist" />

    </RelativeLayout>


</LinearLayout>
