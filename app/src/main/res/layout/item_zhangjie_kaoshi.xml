<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_zg_ks_position"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/item_xh"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/item_zg_ks_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/item_zg_ks_position"
            android:gravity="left"
            android:textColor="@color/_333333"
            android:textSize="@dimen/text_important" />


        <Button
            android:id="@+id/item_zg_ks_find"
            style="@style/item_list_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:drawableRight="@mipmap/enter_arrow"
            android:text="进入"
            android:textColor="@color/theme_green"
            android:textSize="@dimen/text_important" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray"></View>

</LinearLayout>

