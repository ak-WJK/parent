<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/common_head"></include>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/dq"
            android:drawablePadding="@dimen/ndec_w12"
            android:paddingBottom="@dimen/ndec_w3"
            android:paddingLeft="@dimen/ndec_w0"
            android:paddingRight="@dimen/ndec_w3"
            android:paddingTop="@dimen/ndec_w3"
            android:text="自我诊断报告"
            android:textSize="@dimen/text_common" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="@dimen/ndec_w0" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/dg_zhangjie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/zj"
                android:drawablePadding="@dimen/ndec_w12"
                android:gravity="center|left"
                android:padding="8dp"
                android:text="章节报告"
                android:textColor="@color/_333333"
                android:textSize="@dimen/text_common" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/enter_arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="@dimen/ndec_w0" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/dg_quanke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/qk"
                android:drawablePadding="@dimen/ndec_w12"
                android:gravity="center|left"
                android:padding="8dp"
                android:text="全科报告"
                android:textColor="@color/_333333"
                android:textSize="@dimen/text_common" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/enter_arrow" />

        </RelativeLayout>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/dq"
            android:drawablePadding="@dimen/ndec_w12"
            android:paddingBottom="@dimen/ndec_w3"
            android:paddingLeft="@dimen/ndec_w0"
            android:paddingRight="@dimen/ndec_w3"
            android:paddingTop="@dimen/ndec_w3"
            android:text="学校考试报告"
            android:textSize="@dimen/text_common" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="@dimen/ndec_w0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/dg_sys_quanke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/bg2"
                android:drawablePadding="@dimen/ndec_w12"
                android:gravity="center|left"
                android:padding="8dp"
                android:text="报告"
                android:textColor="@color/_333333"
                android:textSize="@dimen/text_common" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/enter_arrow" />

        </RelativeLayout>


    </LinearLayout>

</ScrollView>
