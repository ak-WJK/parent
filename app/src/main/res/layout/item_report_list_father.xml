<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/item_report_list_father_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/item_report_list_father_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/jx"
            android:drawablePadding="@dimen/ndec_w8"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_report_list_father_num"
            android:gravity="center_vertical"
            android:padding="17dp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_common" />


        <ImageView
            android:id="@+id/item_report_list_father_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@+id/item_report_list_father_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/item_report_list_father_icon"
            android:gravity="center"
            android:textColor="@color/text_2" />

    </RelativeLayout>

    <View
        android:id="@+id/item_report_list_father_lineview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_report_list_father_layout"
        android:background="@color/page_bg">

    </View>

</RelativeLayout>




