<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <include layout="@layout/common_head"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/kaoshi_baogao_zhangjie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/zhenduan_zhangjie"
            android:drawablePadding="5dp"
            android:gravity="center|left"
            android:padding="8dp"
            android:text="章节报告"
            android:textColor="@color/_333333"
            android:textSize="@dimen/text_common" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/kaoshi_baogao_quanke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/zhenduan_quanke"
            android:drawablePadding="5dp"
            android:gravity="center|left"
            android:padding="8dp"
            android:text="全科报告"
            android:textColor="@color/_333333"
            android:textSize="@dimen/text_common" />


    </RelativeLayout>




</LinearLayout>
