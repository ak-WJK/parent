<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/item_bg_qk_position"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/item_xh"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/item_bg_qk_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/item_bg_qk_position"
            android:gravity="left"
            android:textColor="@color/_333333"
            android:textSize="@dimen/text_important" />

        <TextView
            android:id="@+id/item_bg_qk_typename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/item_bg_qk_title"
            android:gravity="left"
            android:lines="1"
            android:paddingRight="10dp"
            android:textColor="@color/_333333"
            android:textSize="@dimen/text_common"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/ndec_w0"
            android:layout_toRightOf="@+id/item_bg_qk_typename"
            android:padding="2dp"
            android:textColor="@color/_333333"
            android:textSize="@dimen/text_important"
            android:visibility="gone"
            tools:text="时间" />


        <Button
            android:id="@+id/item_bg_qk_find"
            style="@style/item_list_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:drawableRight="@drawable/enter_arrow"
            android:text="查看"
            android:textColor="@color/theme_green"
            android:textSize="@dimen/text_important" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray"></View>

</LinearLayout>

