<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <Button
        android:id="@+id/item_report_list_item_check"
        style="@style/item_list_btn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="查看" />

    <TextView
        android:id="@+id/item_report_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#222222"
        android:textSize="14dp" />


    <TextView
        android:id="@+id/item_report_list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:lines="1"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/item_report_list_item_title"
        android:layout_toLeftOf="@id/item_report_list_item_check"
        android:gravity="center"
        android:textColor="@color/theme_green"
        android:textSize="14dp" />


</RelativeLayout>